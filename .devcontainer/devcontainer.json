// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.177.0/containers/ubuntu
{
	"name": "Ubuntu",
	"build": {
		"dockerfile": "Dockerfile",
		// Update 'VARIANT' to pick an Ubuntu version: focal, bionic
		"args": { "VARIANT": "bionic" }
	},

	// Set *default* container specific settings.json values on container create.
	"settings": { 
		"terminal.integrated.shell.linux": "/bin/bash"
		// "bazel.buildifierExecutable": "/home/vscode/.local/bin/buildifier",
		// "bazel.executable": "/home/vscode/.local/bin/bazel"
	},

	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		// "bazelbuild.vscode-bazel"
		"zxh404.vscode-proto3"
	],

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "uname -a",

	// Comment out connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "vscode",
	"mounts": [
		"source=cross-media-measurement-bashhistory,target=/commandhistory,type=volume",
		"source=dotcache,target=/home/vscode/.cache,type=volume",
		"source=${localEnv:HOME}/.kube,target=/home/vscode/.kube,type=bind",
		"source=/var/run/docker.sock,target=/var/run/docker-host.sock,type=bind"
  ],
	// Run with --net=host to make it easy to access kind clusters deployed in the host
	"runArgs": ["--net=host", "--init"],
	"overrideCommand": false
}
